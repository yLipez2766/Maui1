<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloMaui.MainPage"
             Title="Cadastramento">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions> <!-- RowerDefinitions é as configs da minha aplicação-->
                <RowDefinition Height="250"/>
                <RowDefinition Height="*"/> <!-- O * ele da autonomia para vc editar -->
                <RowDefinition Height="100"/>

            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="dotnet_bot.png" WidthRequest="150"/>
                <Label Text="Faça o seu cadastro" FontAttributes="Bold" FontSize="18"/>

            </StackLayout>
            <!-- emplihar linhas -->

            <StackLayout Grid.Row="1" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                <StackLayout WidthRequest="320">
                    <Label Text="Nome completo"/>
                    <Entry x:Name="NomeCompleto" Keyboard="Text" Placeholder="Nome completo" Margin="0,10,0,0"/> 
                </StackLayout>
                <StackLayout WidthRequest="320" Margin="0,20,0,0">
                    <!-- 0 - esquerda, 20 em cima, 0 - direita, 0- em baixo-->

                    <Label Text="Data de Nascimento"/>
                    <DatePicker x:Name="DataNascimento" Format="dd/MM/yyyy"></DatePicker>
                </StackLayout>
                <StackLayout WidthRequest="320" Margin="0,20,0,0">
                    <Label Text="Gênero"/>
                    <Picker x:Name="Gênero">
                        <Picker.Items>
                            <x:String>Masculino</x:String>
                            <x:String>Feminino</x:String>
                            <x:String>Prefiro não declarar</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
                <StackLayout WidthRequest="320" Margin="0,20,0,0">
                    <Label Text="Idade"/>
                    <Entry x:Name="Idade" Keyboard="Numeric" Placeholder="Idade" Margin=" 0,10,0,0"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Grid.Row="2" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,0">
                
                <Button x:Name="Cadastro" Text="Cadastrar"/>
                
            </StackLayout>
            
















        </Grid>
    </ScrollView>

</ContentPage>
